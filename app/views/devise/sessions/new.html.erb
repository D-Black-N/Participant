<div class="container card col-3 border border-primary", style='margin-top: 15px'>
  <div class='form-group input-group', style='margin-top: 5px'>
    <h5 class="m-b-1 text-xs-center"><%= t :new_user_session %></h5>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group input-group col-4">
      <span class="has-float-label">
          <%= f.label :email, t(:email) %>
          <%= f.email_field :email, autocomplete: "email" %>
      </span>
    </div>

    <div class="form-group input-group col-4">
      <span class="has-float-label">
          <%= f.label :password, t(:password) %>
          <%= f.password_field :password, autocomplete: "current-password", type: 'password' %>
      </span>
    </div>

    <div class='col-5'></div>

    <div class="form-group input-group col-7">
      <%= f.submit "Войти", class: "btn btn-block btn-primary" %>
    </div>
    <%= link_to t(:new_user_registration), new_user_registration_path %> 
  <% end %>    
</div>

