<div class="container card col-4 border border-primary", style='margin-top: 15px'>
  <div class='form-group input-group', style='margin-top: 5px'>
    <h5 class="m-b-1 text-center"><%= t :new_user_registration %></h5>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group input-group col-3">
      <span class="has-float-label">
          <%= f.label :name, t(:name) %>
          <%= f.text_field :name, autocomplete: "name" %>
      </span>
    </div>

    <div class="form-group input-group col-4">
      <span class="has-float-label">
          <%= f.label :surname, t(:surname) %>
          <%= f.text_field :surname, autocomplete: "surname" %>
      </span>
    </div>

    <div class="form-group input-group col-4">
      <span class="has-float-label">
          <%= f.label :email, t(:email) %>
          <%= f.email_field :email, autocomplete: "email" %>
      </span>
    </div>

    <div class="form-group form-check">
      <%= f.radio_button :key_role, "student"%>
      <%= f.label :student, t(:student) %>
      <%= f.radio_button :key_role, "teacher" %>
      <%= f.label :teacher, t(:teacher) %>
    </div>

    <div class="form-group input-group col-4">
      <span class="has-float-label">
          <%= f.label :password, t(:password) %>
          <%= f.password_field :password, autocomplete: "new-password", type: 'password' %>
      </span>
    </div>

    <div class="form-group input-group col-4">
      <span class="has-float-label">
          <%= f.label :password_confirmation, t(:password_confirmation) %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", type: 'password' %>
      </span>
    </div>
    <div class="form-group input-group col-7">
      <%= f.submit "Зарегистрироваться", class: "btn btn-block btn-primary" %>
    </div>
    <%= link_to t(:log_in), new_user_session_path  %> 
  <% end %>    
</div>
